<form id="update-profile-form"
      action="/users/profile"
      method="post"
      enctype="multipart/form-data"
      class="sign-up-form-fields">
    <h2>Update your profile</h2>
    <br/>
    <label>Name:</label>
    <div class="sign-up-in-inputs">
        <input type="text" name="firstName" value="{{user.firstName}}" placeholder="First name">
        <input type="text" name="lastName" value="{{user.lastName}}" placeholder="Last name">
    </div>
    <label for="bio">Bio:</label>
    <textarea rows = "5" cols = "60" id="bio" type="text" name="bio" class="sign-up-in-inputs"
              placeholder="Tell your friends more about yourself here. Some suggestions: hobbies, interests, socials, your ambitions and maybe your life goals." >
        {{user.bio}}
    </textarea>
    <div>Change profile picture</div>
    <input type="file" id="img" name="img" accept="image/*">
    <br>
    <input type="submit" class="submit-button" value="Update">
</form>