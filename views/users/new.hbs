<form id="new-user-form" action="/users" method="post">
  <div class="sign-up-form-fields">
    <div class="sign-up-form-labels">
      <label for="first-name">First Name: </label>
      <input id="first-name" type="text" name="first-name" value="">
      <label for="last-name">Last Name: </label>
      <input id="last-name" type="text" name="last-name" value="">
      <label for="email">Email: </label>
      <input id="email" type="email" name="email" value="">
      <label for="password">Password: </label>
      <input id="password" type="password" name="password" value="">
      <input id="submit" type="submit" value="Submit">
    </div>
  </div>
</form> 
